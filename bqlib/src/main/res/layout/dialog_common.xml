<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_tip_dialog">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tagIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    />
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:id="@+id/tipTv"
                    android:lineSpacingExtra="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    tools:text="asdasda\nasfdasd"/>

            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/lineView"
            android:layout_width="fill_parent"
            android:background="#dfdfdf"
            android:layout_height="1dp" />


        <TextView
            android:id="@+id/tv_sure"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="#26b14c"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        
        <LinearLayout
            android:id="@+id/selectLin"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:textSize="17sp"
                android:textColor="#666666"
                android:id="@+id/cancleTv"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/lib_cancel" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#dfdfdf" />

            <TextView
                android:textSize="17sp"
                android:textColor="#26b14c"
                android:id="@+id/sureTv"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/lib_sure" />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>